@model ItemDetailView

@{
	ViewData["Title"] = "Edit ItemDetail";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" >
	@Html.AntiForgeryToken()

	<input asp-for="@Model.Amount" />
	<select asp-for="@Model.IdItem" asp-items="@Model.Items">
		<option value="0" >Null</option>
	</select>
	<input type="submit" />
</form>

<a asp-controller="ItemDetail" asp-action="Index" >Undo</a>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}